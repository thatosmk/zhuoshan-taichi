<div class="container">
  <div class="text-center py-4">
    <h1 class="font-weight-bold">Register with us</h1>
  </div>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="py-2">
    <%= f.input :first_name,
                required: true,
                autofocus: true,
                input_html: { class: "form-control form-control-lg" }%>
    </div>
    <div class="py-2">
    <%= f.input :last_name,
                required: true,
                autofocus: true,
                input_html: { class: "form-control form-control-lg" }%>
    </div>
    <div class="py-2">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { class: "form-control form-control-lg", autocomplete: "email" }%>
    </div>
    <div class="py-2">
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { class: "form-control form-control-lg",autocomplete: "new-password" } %>
    </div>
    <div class="py-2">
    <%= f.input :password_confirmation,
                required: true,
                input_html: { class: "form-control form-control-lg",autocomplete: "new-password" } %>
    </div>
    <div class="py-2">
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Get Started", class: "btn btn-success btn-block" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
</div>
