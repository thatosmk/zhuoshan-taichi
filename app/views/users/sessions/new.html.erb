<div class="container">
  <div class="text-center py-4">
    <h1 class="font-weight-bold">Welcome back</h1>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <div class="py-2">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { class: "form-control form-control-lg", autocomplete: "email" } %>
      </div>
      <div class="py-4">
      <%= f.input :password,
                  required: false,
                  input_html: { class: "form-control form-control-lg",  autocomplete: "current-password" } %>
      </div>
      <div class="py-4">
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
    </div>

    <div class="py-4">
      <%= f.button :submit, "Log in", class: "btn btn-success btn-block" %>
    </div>
  <% end %>

<%= render "users/shared/links" %>
</div>
