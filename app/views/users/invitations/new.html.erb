<div class="container">
  <div class="py-5">
    <h2 class="font-weight-bold"><%= t "devise.invitations.new.header" %></h2>
    <p class="lead py-4">
      Invitation can only be sent to members, kindly make sure that the email address belongs to a member of the
      UCT tai chi club.
    </p>
    <%= simple_form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <% resource.class.invite_key_fields.each do |field| -%>
        <div class="form-inputs py-4 col-md-6 col-xs-10 col-sm-10">
          <%= f.input field,
                    required: true,
                    autofocus: true,
                    input_html: { class: "form-control form-control-lg", placeholder: "me@example.com", autocomplete: "email" } %>
        </div>
      <% end -%>

      <div class="form-actions col-md-6 col-xs-12 col-sm-12">
        <%= f.button :submit,t("devise.invitations.new.submit_button"), class: "btn btn-lg btn-primary" %>
        <%= link_to "Cancel", :back, class: "btn btn-light btn-lg"%>
      </div>
    <% end %>
