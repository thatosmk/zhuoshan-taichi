<div class="container">
  <div class="py-5">
    <h2 class="font-weight-bold py-4">Forgot your password?</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs py-4 col-md-6 col-xs-10 col-sm-10">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { class: "form-control form-control-lg", placeholder: "me@example.com", autocomplete: "email" } %>
      </div>

      <div class="form-actions col-md-6 col-xs-12 col-sm-12">
        <%= f.button :submit, "Send me reset password instructions", class: "btn btn-lg btn-primary" %>
        <%= link_to "Cancel", :back, class: "btn btn-light btn-lg"%>
      </div>
    <% end %>
  </div>
</div>
