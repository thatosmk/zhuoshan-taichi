<div class="py-2">
  <div class="py-2">
    <h4 class="text-muted">
      Club Blog &nbsp; <%= link_to "create new post", new_post_path, class: "btn btn-dark" %>
    </h4>
    <hr/>
  </div>
  <div class="card-columns py-4">
    <% @posts.each do |post| %>
      <div class="card">
        <div class="card-body">
          <h4 class="card-title"><%= post.title %></h4>
          <p class="card-text">
            <%= post.body.html_safe[0..400] %>
            <%= link_to 'more...', post %> 
          </p>
          <% if !@admin.nil? %>
            <%= link_to 'Edit', edit_post_path(post) %> | 
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></p>
          <% end %>
        </div>
        <div class="card-footer">
            <%= link_to 'Read more', post, class: "card-link" %> 
        </div>
      </div>
    <% end %>
  </div>
</div>
