<% title "Our Blog | Tai Chi" %>
<div class="container">
  <div class="py-2">
    <h4 class="text-muted">
      Club Blog
    </h4>
    <hr/>
    <%= link_to "create new post", new_post_path, class: "btn btn-dark" %>
  </div>
  <div class="py-4">
    <% @posts.each do |post| %>
      <div class="article-card">
        <div class="py-4">
          <h4 class="font-weight-bold"><%= link_to post.title, post %></h4>
          <p class="py-2 text-muted">
          <%= pluralize(post.impressionist_count, 'view') %>
          - posted <%= time_ago_in_words(post.created_at) %>  ago
          - by: <%= post.user.full_name %>
          </p>
          <% if !@admin.nil? %>
            <%= link_to 'Edit', edit_post_path(post) %> | 
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></p>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
