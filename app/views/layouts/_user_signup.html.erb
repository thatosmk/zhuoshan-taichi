<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="row pb-2 pt-2 mr-2 ml-2">
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name, autofocus: false, class: "form-control form-control-lg", required: true %>
    </div>

    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name, autofocus: false,  class: "form-control form-control-lg", required: true %>
    </div>
  </div>

  <div class="row pb-2 pt-2 mr-2 ml-2">
    <div class="col">
      <%= f.label :sex %><br />
    </div>
  </div>
  <div class="row pb-2 pt-2 mr-2 ml-2">
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
      <div class="col`">
        <%= f.select :sex, options_for_select(["Female", "Male"]), {},  class: "custom-select custom-select-lg", required: true%>
      </div>
    </div>

    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
    </div>
  </div>
  <div class="row pb-2 pt-2 mr-2 ml-2">
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
      <%= f.label :student_number %><br />
      <%= f.text_field :std_num, autofocus: false,  class: "form-control form-control-lg", required: true %>
    </div>

    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: false, autocomplete: "email", class: "form-control form-control-lg", required: true %>
    </div>
  </div>

  <div class="row pb-2 pt-2 mr-2 ml-2">
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg", required: true %>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg", required: true %>
    </div>
  </div>

  <div class="row pb-2 pt-2 mr-2 ml-2">
    <div class="col">
      <%= f.submit "Sign up", class: "btn btn-success" %>
    </div>
  </div>
<% end %>
