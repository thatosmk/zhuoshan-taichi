<div>
  <%= link_to "back", :back, class: "btn btn-secondary btn-lg"%>
  <h1 class="font-weight-bold py-4">
    <%= @video.title %>
  </h1>
  <span class="badge badge-primary lead py-2">
    <%= @video.category %>
  </span>
  <p class="lead py-2">
    <%= @video.desc %>
  </p>
  <div class="card mb-4">
    <div class="embed-responsive embed-responsive-4by3">
      <iframe class="embed-responsive-item" width="800" height="480" src="https://www.youtube.com/embed/#{video.youtube_id}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>
  </div>
</div>
